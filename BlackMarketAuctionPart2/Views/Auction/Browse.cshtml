@helper Truncate(string input, int length)
{
if (input.Length <= length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}

@{
    ViewBag.Title = "Browse";
}

<h2>Browsing Category: @Model.Name</h2>
    @foreach (Item item in Model.items)
    {
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="@item.ItemImage" alt="@item.Name" width="256" height="256">
                    <div class="caption">
                        <h3>@item.Name</h3>
                        <p>@item.Category.Name</p>
                        <p>$@item.Price</p>
                        <p class="text-center"><a href="@Url.Action("Details", new { id = item.ItemID })" class="btn btn-primary" title="View Category">View Item</a></p>
                    </div>
                </div>
            </div>
        </div>
    }
<a href="@Url.Action("Index")" class="btn btn-primary" title="Back"><i class="fa fa-chevron-left"> Back</i></a>