@using BlackMarketAuctionPart2.Models
@model Item

    <!--
         Details.cshtml
         Austin Cameron - Patrick Ross - Ryan Jameson
         Black Market Auction House
         This is the detailed view for an item on the auction list
    -->



@{
    ViewBag.Title = "Details";
}
<br />
<br />
<h1>Item: @Model.Name</h1>
<h3>Category: @Model.Category.Name</h3>
<div class="container text-center">
    <img src="@Model.ItemImage" alt="@Model.Name" />
    <h3>@Model.Description</h3>
    <h3>$@Model.Price</h3> 
</div>
<div class="text-center">
    <a href="@Url.Action("Browse", new { Category = Model.Category.Name })" class="btn btn-primary" title="Back"><i class="fa fa-chevron-left"> Back</i></a>
    <a href="" class="btn btn-primary" title="Purchase"><i class="fa fa-shopping-cart"> Add to Cart</i></a>
</div>